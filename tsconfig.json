{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es6",
      "dom"
    ],
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "es3",
    "typeRoots": [
      "@types",
      "./src/@types"
    ]
  },
  "files": [
    "./src/index.ts"
  ],
  "include": [
    "src/**/*"
  ]
}
