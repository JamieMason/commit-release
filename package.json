{
  "name": "commit-release",
  "description": "Commit and tag a release for a conventional changelog project.",
  "version": "0.7.5",
  "author": "Jamie Mason <jamie@foldleft.io> (https://github.com/JamieMason)",
  "bin": {
    "commit-release": "dist/bin.js"
  },
  "bugs": "https://github.com/JamieMason/commit-release/issues",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "chalk": "2.3.0",
    "commander": "2.12.2",
    "conventional-changelog": "1.1.7",
    "conventional-recommended-version": "0.5.2",
    "execa": "0.8.0",
    "graceful-fs": "4.1.11",
    "package-json-to-readme": "2.1.0"
  },
  "devDependencies": {
    "@types/execa": "0.8.0",
    "@types/graceful-fs": "4.1.2",
    "@types/node": "8.5.2",
    "prettier": "1.9.2",
    "rimraf": "2.6.2",
    "tslint": "5.8.0",
    "typescript": "2.6.2"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/JamieMason/commit-release#readme",
  "issues": "https://github.com/JamieMason/commit-release/issues",
  "keywords": [
    "changelog",
    "commit",
    "conventional",
    "conventional-changelog",
    "deploy",
    "git",
    "log",
    "release",
    "workflow"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "repository": "JamieMason/commit-release",
  "scripts": {
    "build": "tsc --project .",
    "format": "prettier --write '**/*.md' './src/**/*.ts'",
    "lint": "tslint --fix --project ./tsconfig.json",
    "prebuild": "rimraf ./dist",
    "prelint": "npm run format",
    "prepack": "npm run build"
  },
  "typings": "dist/index.d.ts"
}
