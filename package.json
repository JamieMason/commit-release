{
  "name": "commit-release",
  "description": "Commit and tag a release for a conventional changelog project.",
  "version": "0.6.2",
  "author": "Jamie Mason <jamie@foldleft.io> (https://github.com/JamieMason)",
  "bin": {
    "commit-release": "dist/bin.js"
  },
  "bugs": "https://github.com/JamieMason/commit-release/issues",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "chalk": "1.1.3",
    "commander": "2.9.0",
    "conventional-changelog": "1.1.0",
    "conventional-recommended-version": "0.3.2",
    "execa": "0.5.0",
    "graceful-fs": "4.1.11",
    "package-json-to-readme": "1.5.1",
    "when": "3.7.7"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-es2015": "6.24.1",
    "cz-conventional-changelog": "2.0.0",
    "eslint-config-xo": "0.18.2",
    "eslint-plugin-ava": "4.2.1",
    "eslint-plugin-unicorn": "2.1.2",
    "fast-async": "6.3.0",
    "rimraf": "2.6.1",
    "xo": "0.18.2"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/JamieMason/commit-release#readme",
  "issues": "https://github.com/JamieMason/commit-release/issues",
  "keywords": [
    "changelog",
    "commit",
    "conventional",
    "conventional-changelog",
    "deploy",
    "git",
    "log",
    "release",
    "workflow"
  ],
  "license": "MIT",
  "main": "commit-release",
  "repository": "JamieMason/commit-release",
  "scripts": {
    "build": "babel --out-dir ./dist --ignore node_modules ./src",
    "lint": "xo",
    "prebuild": "rimraf dist",
    "prepack": "npm run build",
    "test": "npm run lint"
  },
  "xo": {
    "envs": [
      "node"
    ],
    "esnext": true,
    "rules": {
      "import/extensions": 0,
      "import/no-unassigned-import": 0,
      "object-curly-spacing": 0,
      "unicorn/no-process-exit": 0
    },
    "space": 2
  }
}
